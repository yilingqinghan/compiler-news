<!doctype html>
<html lang="zh-cn">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>编译器每日情报 - {{ date }}</title>
  <style>
    body {font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans"; padding: 24px; max-width: 900px; margin: auto;}
    .card {border: 1px solid #eee; border-radius: 12px; padding: 16px; margin: 14px 0;}
    .tags span {display:inline-block; background:#f4f4f5; border-radius: 999px; padding:4px 10px; margin-right:6px; font-size:12px;}
    .kp li {margin-bottom: 6px;}
    .links a {margin-right: 8px; font-size: 13px;}
  </style>
</head>
<body>
  <h1>编译器每日情报 <small>{{ date }}</small></h1>
  {% for it in items %}
  <div class="card">
    <h2>{{ it.summary.title or it.title }}</h2>
    {% if it.summary.context %}<p>{{ it.summary.context }}</p>{% endif %}
    {% if it.summary.key_points %}
      <ul class="kp">
        {% for p in it.summary.key_points %}<li>{{ p }}</li>{% endfor %}
      </ul>
    {% endif %}
    {% if it.summary.impact %}<p><b>影响：</b>{{ it.summary.impact }}</p>{% endif %}
    {% if it.summary.tags %}
      <div class="tags">{% for t in it.summary.tags %}<span>{{ t }}</span>{% endfor %}</div>
    {% endif %}
    {% if it.summary.links %}
      <p class="links">{% for l in it.summary.links %}<a href="{{ l }}" target="_blank">{{ l }}</a>{% endfor %}</p>
    {% endif %}
  </div>
  {% endfor %}
</body>
</html>
