<!doctype html>
<html lang="zh-cn">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>编译器每日情报 - {{ date }}</title>
  <style>
    :root {
      --fg: #0f172a; --muted: #475569; --bg: #ffffff;
      --card: #ffffff; --border: #e5e7eb; --chip: #f4f4f5;
      --link: #0366d6; --accent: #111827;
    }
    body {font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans";
          color: var(--fg); background: var(--bg);
          padding: 24px; max-width: 1000px; margin: auto;}
    h1 {font-size: 28px; margin: 0 0 12px;}
    .muted {color: var(--muted);}
    .toc {border:1px solid var(--border); border-radius:12px; padding:12px; margin:10px 0 24px;}
    .toc a {margin-right:12px; color: var(--link); text-decoration:none;}
    .group {margin: 24px 0;}
    .group h2 {font-size:22px; padding-top:70px; margin-top:-70px;} /* anchor offset */
    .card {border:1px solid var(--border); border-radius:14px; padding:16px; margin:12px 0; background:var(--card);}
    .badges span {display:inline-block; background:var(--chip); border-radius:999px; padding:4px 10px; margin-right:6px; font-size:12px;}
    .kp {margin:8px 0; padding-left:18px;}
    .kp li {margin-bottom:6px;}
    .links a {margin-right:8px; font-size:13px; color: var(--link); text-decoration:none;}
    .pill {font-size:12px; padding:2px 8px; border-radius:999px; border:1px solid var(--border); margin-left:8px;}
    .pill.h {border-color:#ef4444; color:#ef4444;}
    .pill.m {border-color:#f59e0b; color:#b45309;}
    .pill.l {border-color:#22c55e; color:#15803d;}
  </style>
</head>
<body>
  <h1>编译器每日情报 <span class="muted">{{ date }}</span></h1>

  <!-- TOC -->
  <div class="toc">
    <b>导航：</b>
    {% for g in groups.keys()|list %}
      <a href="#{{ g | replace(' ','-') }}">{{ g }}</a>
    {% endfor %}
  </div>

  {% for g, items in groups.items() %}
  <div class="group" id="{{ g | replace(' ','-') }}">
    <h2>{{ g }}</h2>
    {% for it in items %}
      {% set s = it.summary %}
      <div class="card">
        <div style="display:flex; align-items:center; justify-content:space-between;">
          <h3 style="margin:0 0 6px 0;">{{ s.title or it.title }}</h3>
          {% set p = s.priority or it.priority %}
          <span class="pill {{ 'h' if p=='high' else 'm' if p=='medium' else 'l' }}">{{ p }}</span>
        </div>
        {% if s.context %}<p class="muted">{{ s.context }}</p>{% endif %}

        {% if s.key_points %}<ul class="kp">{% for p in s.key_points %}<li>{{ p }}</li>{% endfor %}</ul>{% endif %}

        {% if s.tags %}<div class="badges">{% for t in s.tags %}<span>{{ t }}</span>{% endfor %}</div>{% endif %}

        {% if s.links %}<p class="links">{% for l in s.links %}<a href="{{ l }}" target="_blank">{{ l }}</a>{% endfor %}</p>{% endif %}
      </div>
    {% endfor %}
  </div>
  {% endfor %}
</body>
</html>